  .app-main-body 
    +MdcTooltip({ title: 'Search', id: 'tooltip-search' })
    +MdcTooltip({ title: 'Download', id: 'tooltip-download' })

    .app-body-header
      .app-des Mailbox
      .app-title All Mail
    .app-body-main
      .mailbox-page
        .table-main-wrapper 
          form(action="#").custom-style-form.table-main-header.d-flex.align-items-center.justify-content-between.flex-wrap
            .header-item.d-flex.align-items-center.flex-wrap
              +MdcTextField({ placeholder: 'Date Received', id: 'dateReceived', type: 'date' })
              +MdcTextField({ placeholder: 'Status Update Date', id: 'statusUpdateDate', type: 'date' })
              +MdcSelect({ idLabel: 'status', idSelectedText: 'status', placeholder: 'Status',  dataSelectOptions: [{ title: 'Status 1', value: 'status-1' }, { title: 'Status 2', value: 'status-2' }] })
              +MdcSelect({ idLabel: 'enquiry-type', idSelectedText: 'enquiry-type', placeholder: 'Enquiry Type',  dataSelectOptions: [{ title: 'Enquiry Type 1', value: 'enquiry-type-1' }, { title: 'Enquiry Type 2', value: 'enquiry-type-2' }] })
              
            .header-item.d-flex.align-items-center.flex-wrap
              +MdcButton({ icon: './assets/icons/icon-search.svg', tooltipId: 'tooltip-search' })
              +MdcButton({ icon: './assets/icons/icon-download.svg', tooltipId: 'tooltip-download' })
              
          .table-main
            .table-main-body 
              table 
                thead 
                  tr 
                    td.center.nowrap Date & Time Received
                    td.center.nowrap Sender
                    td.center.nowrap Enquiry Type
                    td.min-width-150 Subject
                    td.center Status
                    td.center Status Last Updated On
                    td.table-action
                tbody 
                  each item in dataMailbox
                    tr(class=`${item.status === 'New' ? 'bold' : item.status === 'Closed' ? 'disabled' : ''}`)
                      td.center.nowrap= item.date 
                      td.center.nowrap= item.sender    
                      td.center.nowrap= item.enquiryType
                      td.min-width-150= item.subject
                      td
                        .tag-label-group.d-flex.justify-content-center 
                          .tag-item(class=`${item.status.toLowerCase()}`)= item.status
                      td.center= item.lastUpdated
                      td.table-action.center 
                        .table-see-more(data-toggle="modal" data-target=`#modal-mailbox-reply`)
                          img(src="./assets/icons/icon-eye.svg", alt="")

            .table-main-footer.d-flex.align-items-center.justify-content-end 
