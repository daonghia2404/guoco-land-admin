mixin MdcCheckbox(data)
  .mdc-checkbox-wrapper 
    .mdc-checkbox
      input(type="checkbox" id=`${data.id ? data.id : ''}`).mdc-checkbox__native-control
      .mdc-checkbox__background
        <svg class="mdc-checkbox__checkmark" viewBox="0 0 24 24"><path class="mdc-checkbox__checkmark-path" fill="none" d="M1.73,12.91 8.1,19.28 22.79,4.59"/></svg>
        .mdc-checkbox__mixedmark
      .mdc-checkbox__ripple
    label(for=`${data.id ? data.id : ''}`)= data.label