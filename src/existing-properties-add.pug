extends includes/layout/layout.pug
block pages
  include includes/components/mdc-button.pug
  include includes/components/mdc-select.pug
  include includes/components/mdc-text-field.pug

  form(action="#").app-main-body 
    .app-body-header
      .app-des Discover / Existing Properties / #[strong New Property]
      .app-title.d-flex.align-items-center.justify-content-between
        |New Property
        .button-group.d-flex.custom-style-form
          +MdcButton({ title: 'Cancel', className: 'mr-2', isOutline: true })
          +MdcButton({ title: 'Save', className: 'form-save-btn' })
          
    .app-body-main
      .existing-properties-add-page.d-flex.flex-wrap.justify-content-between
        .tab-expand-group 
          .tab-expand-item.section-card-style.form-validation
            .tab-header.d-flex.justify-content-between.align-items-center.tab-expand-click-self
              span Step 1: Basic Details
              img(src="./assets/icons/icon-angle-up-white.svg", alt="")
            .tab-body 
              .custom-style-form
                .form-group.col-6-4
                  .form-item.form-input-validation(data-rules="required" data-name="Property Name")
                    label.form-label Property Name *
                    +MdcTextField({ type: 'text', placeholder: 'Property Name' })
                    .form-message
                  .form-item.form-select-validation(data-rules="required" data-name="Property Type")
                    label.form-label Property Type *
                    +MdcSelect({ idLabel: 'select-type', idSelectedText: 'select-type', placeholder: 'Select Type',  dataSelectOptions: [{ title: 'Select Type 1', value: 'select-type-1' }, { title: 'Select Type 2', value: 'select-type-2' }] })
                    .form-message

                .form-group.col-4-6
                  .form-item.form-input-validation(data-rules="required" data-name="Launch / TOP Date")
                    label.form-label Launch / TOP Date *
                    +MdcTextField({ type: 'date', placeholder: 'Launch / TOP Date *' })
                    .form-message
                  .form-item.form-input-validation(data-rules="required" data-name="Address")
                    label.form-label Address *
                    +MdcTextField({ type: 'text', placeholder: 'Address' })
                    .form-message

                .form-group.col-4-6
                  .form-item.form-input-validation(data-rules="required" data-name="Contact Number")
                    label.form-label Contact Number *
                    +MdcTextField({ type: 'text', placeholder: 'Contact Number' })
                    .form-message
                  .form-item.form-input-validation(data-rules="required,email" data-name="Email Address")
                    label.form-label Email Address *
                    +MdcTextField({ type: 'text', placeholder: 'Email Address' })
                    .form-message

                .form-group 
                  .form-item 
                    +MdcButton({ title: 'Next', className: 'tab-expand-click-next form-submit-validation' })

          .tab-expand-item.section-card-style.form-validation
            .tab-header.d-flex.justify-content-between.align-items-center.tab-expand-click-self
              span Step 2: Description
              img(src="./assets/icons/icon-angle-up-white.svg", alt="")
            .tab-body 
              .custom-style-form
                .form-group
                  .form-item.form-textarea-validation(data-rules="required" data-name="Description")
                    +MdcTextField({ type: 'textarea', placeholder: 'Description here', isCounter: true, maxLength: 150 })
                    .form-message

                .form-group 
                  .form-item 
                    +MdcButton({ title: 'Back', isOutline: true, className: 'tab-expand-click-prev mr-2 form-submit-validation' })
                    +MdcButton({ title: 'Next', className: 'tab-expand-click-next form-submit-validation' })

          .tab-expand-item.section-card-style.form-validation
            .tab-header.d-flex.justify-content-between.align-items-center.tab-expand-click-self
              span Step 3: File Upload
              img(src="./assets/icons/icon-angle-up-white.svg", alt="")
            .tab-body 
              .custom-style-form
                .form-group
                  .form-item.upload-file.form-upload-validation(data-rules="required" data-name="File Upload") 
                    label.form-label Upload PDF *
                    .upload-wrapper(style="display: none;")
                      input(type="file")
                    .upload-file-group.d-flex.align-items-start.justify-content-between
                      .file-list-wrapper
                        .text-no-file No file selected
                        each item in [1,2]
                          .file-item.d-flex.align-items-center.justify-content-between
                            a(href="#")= `Example-File-${item}.pdf`
                            +MdcButton({ icon: './assets/icons/icon-close.svg' })
                        
                      
                      +MdcButton({ title: 'Upload', isUpload: true })

                    .form-message

                .form-group 
                  .form-item 
                    +MdcButton({ title: 'Back', isOutline: true, className: 'tab-expand-click-prev form-submit-validation' })

        .upload-images.section-card-style 
          .section-card-header.d-flex.align-items-center.justify-content-between 
            span.card-title Images 
          
          .custom-style-form.form-validation
            .form-group 
              .form-item.upload-image.uploaded.upload-single-image.form-upload-validation(data-rules="required" data-name="Thumbnail Image") 
                .upload-wrapper.s-250-250.d-flex.align-items-center.justify-content-center
                  input(type="file")
                  .upload-placeholder 
                    img(src="./assets/icons/icon-image-gray.svg", alt="")
                    |Upload Image
                  .upload-image-value
                    img(src="./assets/images/image-thumbnail.png", alt="")
                    +MdcButton({ icon: './assets/icons/icon-delete-white.svg' })

                .upload-wrapper-footer.d-flex.align-items-center
                  label.form-label
                    span Thumbnail Image *
                    i (250 x 250px)
                  +MdcButton({ isUpload: true, title: 'Change', isOutline: true })

                .form-message                  

            .form-group 
              .form-item.upload-image.upload-single-image.form-upload-validation(data-rules="required" data-name="Feature Banner Image") 
                .upload-wrapper.s-350-250.d-flex.align-items-center.justify-content-center
                  input(type="file")
                  .upload-placeholder 
                    img(src="./assets/icons/icon-image-gray.svg", alt="")
                    |Upload Image
                
                label.form-label
                  span Feature Banner Image *
                  i (350 x 250px)
                
                .form-message

        a(href="existing-properties.html").back-page.d-flex.align-items-center
          img(src="./assets/icons/icon-arrow-left-brown.svg", alt="")
          |Back to Existing Properties